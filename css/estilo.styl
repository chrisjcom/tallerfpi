fondo_header = #1b2027

aside
    background url("../imgs/bg2.png")
    padding 35px 10% 0
    position relative
    .posts_list
        width 63%
        display inline-block
        vertical-align middle
        .post
            display inline-block
            vertical-align top
            width 48%
            margin-bottom 30px
            .post_img
                background #d0d0d0
                margin-right 14px
    .suscripcion
        width 35%
        display inline-block
        vertical-align middle

header
  background fondo_header
  padding 34px 10% 21px
  position relative
  &::before
    bottom 0
    border-top 1px solid #333d4a
  &::after
    top 0
    border-bottom 1px solid #333d4a

section
    padding 35px 10%
    background #f5f3ee
    .post_contenido
        width 70%
        margin-left 12px
        p
            font-family Helvetica
            font-size 12px
            display block
            width 100%
            margin-top 0
            text-align left
            color #444
    .suscripcion.full-width
        background linear-gradient(rgb(252,252,252),rgb(242,242,242))
            

.anio-curso-usuario
    font-family Georgia
    font-size 11px
    font-style italic
    color #888888

.descripcion_imagen
    background #FOECE4
    display block
    text-align center
    line-height 1.5
    width 100%
    color #888
    font-size 11px
    font-family Georgia
    font-style italic
    margin-bottom 30px
    padding-bottom 5px
    padding-top 5px
    border-radius 4px
    border 1px solid #e3e0d9
    
.fecha-tweet
    color #888
    font-family Georgia
    font-style italic
    font-size 11px

.footer_arriba
    background url(../imgs/bg2.png)
    padding-bottom 25px
    padding-top 25px
    position relative
    overflow hidden
    padding 25px 10% 30px
    h3
        color #f1eee5
        font-family "Segoe UI"
        font-size 13px
        font-weight 500
    p
        color #979797
        font-size 12px
        font-family Arial

.header_abajo
  text-align center
  margin 0 auto
  margin-top 50px
  width 80%
  h1
    font-family "Georgia" !important
    font-style italic
    font-size 26px
    color #f1eee5
  p
    color #64909f
    font-family "Arial Unicode MS"
    font-size 18px

.info-usuario
    display inline-block
    vertical-align top
    span
        display block

.logo
  width 30%
  span
    color #f1eee5
    font-family "Segoe UI"
    font-size 34px

.opinion
    margin-bottom 20px
    figure
        display inline-block
        vertical-align top
        margin 0
        img
            width 55px
            height 55px
            display inline-block
            vertical-align top
            position relative
            margin 0
     p
        color #444
        font-style italic
        font-family Georgia
        font-size 12px
        &::after
        &::before
            content '"'

.post_contenido
    display inline-block
    vertical-align top
    width 60%
    p
        color #979797
        font-size 12px
        font-family Arial
        text-align justify
.post_datos
    color #888
    font-family Georgia
    font-size 11px
    font-style italic
    text-align left

.post_img
    width 55px
    height 55px
    display inline-block
    vertical-align top
    position relative
    margin 0
    a
        left 0
        width 11px
        height 11px
        background #444
        position absolute
        top 0
        i
            left -8px
            color #d1d1d1
            background rgba(0,0,0,0.15)
            font-size: 25px
            padding 2px
            border-radius 50%
            width 25px
            text-align center
            position absolute
            top -8px

.post_numero_comentarios
    color #444

.previa_minerva
    height 210px
    width 100%
    background fondo_header
    box-sizing border-box
    padding-top 30%
    padding-bottom 30%
    position relative
    span
        display block
        text-align center
        &:first-child
            color #f1eee5
            font-size 34px
            font-family "Segoe UI"
            font-weight bold
        &:nth-child(2)
            color #6b96a8
            font-size 11px
            font-style italic
            font-family Georgia
    a
        right 0
        width 11px
        height 11px
        background #444
        position absolute
        top 0
        i
            left -10px
            color #D1D1D1
            background rgba(0,0,0,0.15)
            font-size 25px
            padding 2px
            border-radius 50%
            width 25px
            text-align center
            position absolute
            top -8px
    + .descripcion_imagen
        margin-top 15px


.section_column
    width 28%
    display inline-block
    margin-right 4%
    margin-top 55px
    vertical-align top
    text-align justify
    &:nth-child(2)
        > figure
            margin-left 0
            width 100%
            > img
                width 100%
                box-shadow 0 0 5px #ccc
                margin-bottom 15px
                height 112px
    p
        font-family Helvetica
        font-size 12px
        color #444
        line-height 1.5

.section_title
    font-family Arial
    font-size 14px
    color #333
    margin-bottom 25px
    display block
    font-weight normal

.suscripcion
    p
        color #979797
        font-size 12px
        font-family Arial
        text-align justify
    &.full-width
        width 100%
        box-sizing border-box
        margin-right 0
        padding 20px 5%
        border 1px solid rgb(219,216,209)
        .suscripcion_boton
            width 30%
            border 5px solid rgb(238,238,238)
            font-style italic
        p
            color #444

.suscripcion_boton
    background linear-gradient(#f5edca,#dfbe49)
    display inline-block
    width 45%
    color #252525
    font-size 14px
    font-family Georgia
    line-height 3
    text-decoration none
    text-align center
    border-radius 20px
    margin-right 5px

.suscripcion_info
    color #444
    width 60%
    margin-right 3%
    p
        font-family Arial
        font-size 12px
    span
        font-family Georgia
        font-size 18px
        font-style italic


.tweet
    p
        margin-top 0
        color #444
        font-family Arial
        font-size 12px
    a
        color #5597b2
        font-family Arial

.contacto_info
    float left

.formulario_suscripcion
    float right

.datos_email
    margin-right 20px

.contacto-email
    color #f1eee5

.contenedor-input-boton
    background rgb(16,16,16)
    display inline-block
    padding 5px
    border 1px solid rgb(4,4,4)
    border-radius 4px

.email_usuario
    background rgba(0,0,0,0)
    border none
    color #979797
    font-size 12px
    font-family Arial
    line-height 20px
    &:focus
        outline 0px

.enviar_suscripcion
    color #4a4a4a
    font-family Helvetica, "Myriad Pro"
    font-size 12px
    font-weight bold
    background rgb(208,208,208)
    border-radius 4px
    border none
    line-height 20px
.footer_abajo
    background url(../imgs/bg3.png)
    padding 0 10%
    overflow hidden
    line-height 4
    span
        font-family Arial
        font-size 12px
        color #626262
        &:first-child
            float left
            a
                color #e1e0e0
                text-decoration none
        &:last-child
            float right
            a
                color #999999
                text-decoration none

.datos_email
.datos_telefono
    color #979797
    font-size 12px
    font-family Arial
    display inline-block

.nombre-usuario
.carrera-usuario
    font-family Arial
    font-size 12px
    color #444

.suscripcion_info
.suscripcion.full-width .suscripcion_boton
    display inline-block
    vertical-align middle

.post_titulo
.suscripcion h2
    margin-top 0
    font-family Arial
    font-size 13px
    color #f1eee5
    font-weight normal    

header::after
header::before
  content ''
  background rgba(0,0,0,0.2)
  padding-top 7px
  width 100%
  position absolute
  left 0

.contacto_info
.formulario_suscripcion
    width 45%

aside::after
aside::before
.footer_arriba::after
.footer_arriba::before
    background url("../imgs/patroncito.png") repeat-x
    background position 50% 0
    content ''
    height 15px
    width 100%
    display block
    left 0
    position absolute
    
aside::before
.footer_arriba::before
    bottom 0

aside::after
.footer_arriba::after
    top 0

section .post
.tweet
    border-bottom 1px solid rgb(228,225,217)
    padding-bottom 20px
    padding-top 20px

section .post_img
.opinion img
    background rgb(17,17,17)

.menu_principal
  width 65%

.menu_principal
    > ul 
      > li
        display inline-block
        color #f1eee5
        position relative
        font-family "Segoe UI"
        font-size 14px
        padding 0 10px
        line-height 22px
        height auto
        border-radius 4px
        &:hover 
          > ul
            display block
        > a
          color #f1eee5
          text-decoration none
        > ul
          position absolute
          left 0
          padding 0
          display none
          width 100%
          > li
            list-style none
            cursor pointer
            padding 5px

.menu_principal > ul > li.active
.menu_principal > ul > li:hover
.menu_principal > ul > li > ul > li:hover
  background url("../imgs/bg3.png")

.logo
.menu_principal
  display inline-block
  vertical-align top

.logo img
.logo span
  display inline-block
  vertical-align middle